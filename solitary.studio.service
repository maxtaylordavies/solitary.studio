[Unit]
Description=solitary.studio

[Service]
User=pi
Type=simple
TimeoutSec=900
ExecStartPre=/bin/sh -c 'cd ui && rm -rf dist && rm -rf build'
ExecStartPre=/bin/sh -c 'cd ui && yarn build && mv build dist'
ExecStartPre=/bin/sh -c 'cd server && /usr/local/go/bin/go build'
ExecStart=/home/pi/code/solitary.studio/server/server
WorkingDirectory=/home/pi/code/solitary.studio/

[Install]
WantedBy=multi-user.target
